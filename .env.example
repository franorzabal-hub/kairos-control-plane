# Kairos Control Plane - Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# ENVIRONMENT
# =============================================================================

# Environment mode: development, staging, production
# In development: CORS allows all origins, additional localhost ports enabled
ENVIRONMENT=development

# Server port (default: 8080 in production, 8001 for local dev)
PORT=8001

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================

# Base domain for tenant URLs (e.g., {tenant}.kairos.app)
BASE_DOMAIN=kairos.app

# Demo tenant URL (used for trial signups before tenant creation)
DEMO_TENANT_URL=https://demo.kairos.app

# Landing page URL (for redirects)
LANDING_PAGE_URL=https://kairos.app

# =============================================================================
# SECURITY
# =============================================================================

# API Key for authenticated endpoints (required in production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=

# Webhook secret for validating incoming webhooks
WEBHOOK_SECRET=

# CORS allowed origins (comma-separated, only used if not in development mode)
# ALLOWED_ORIGINS=https://kairos.app,https://admin.kairos.app

# =============================================================================
# GKE CONFIGURATION
# =============================================================================

# Google Cloud Project ID
GKE_PROJECT=kairos-escuela-app

# GKE cluster location
GKE_LOCATION=us-central1

# GKE cluster name
GKE_CLUSTER=kairos-cluster-dev

# Kubernetes namespace for Frappe deployments
GKE_NAMESPACE=frappe

# Whether running inside the cluster (uses in-cluster auth)
USE_IN_CLUSTER=false

# Frappe Docker image to deploy
FRAPPE_IMAGE=frappe/frappe-worker:v15

# =============================================================================
# EMAIL (Optional - for email validation flow)
# =============================================================================

# SendGrid API key for sending validation emails
# SENDGRID_API_KEY=

# =============================================================================
# GOOGLE OAUTH (for validating signup tokens)
# =============================================================================

# Google OAuth Client ID (used to validate Google SSO tokens)
# GOOGLE_CLIENT_ID=
